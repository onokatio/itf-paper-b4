rules:
  preset-ja-engineering-paper:
    unify-kuten-and-touten:
      kuten: "。"
      touten:  "、"
  preset-ja-technical-writing:
    no-mix-dearu-desumasu:
      preferInBody: "である"
    sentence-length: false
  preset-jtf-style:
    "1.2.2.ピリオド(.)とカンマ(,)": false
  preset-japanese:
    sentence-length: false
  preset-ja-spacing: true
plugins:
  - latex2e
filters:
  comments: true
